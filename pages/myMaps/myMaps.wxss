/* pages/myMaps/myMaps.wxss */

.tip {
    font-size: 14px;
    color: #888;
    padding: 15px 0 8px 15px;
    border-bottom: 1rpx solid #d9d9d9;
}

.add-btn {
    height: 100rpx;
    width: 100rpx;
}

.add-btn-box {
    height: 120rpx;
    width: 120rpx;
    position: absolute;
    background-color: #eb6159;
    border-radius: 50%;
    bottom: 180rpx;
    right: 60rpx;
    box-shadow: 4rpx 4rpx 4rpx #888;
    display: flex;
    justify-content: center;
    align-items: center;
}

.lost-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.lost-image {
    width: 500rpx;
    height: 500rpx;
}

.lost-text {
    font-size: 14px;
    color: #888;
    padding: 8px 0 20px;
    margin-top: 100rpx;
}