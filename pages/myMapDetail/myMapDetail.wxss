/* pages/myMapDetail/myMapDetail.wxss */

map {
    width: 100%;
    height: 300px;
}

/*----------------------------------icon-----------------------------------------------*/

.icon-wrap {
    display: flex;
    justify-content: space-around;
    margin-bottom: 30rpx;
}

.icon-image {
    height: 120rpx;
    width: 120rpx;
    margin: 16rpx 0 0 0;
}

.icon {
    display: flex;
    flex-direction: column;
}

.icon-num {
    text-align: center;
}

/*----------------------------------description--------------------------------------------*/

.authorName {
    text-align: right;
}

.description-wrap {
    padding: 10px 15px;
    background-color: white;
}

.description-locality {
    color: #eb6159;
    font-size: 14px;
    text-align: right;
    padding: 0 15px 10px 0;
}

/*----------------------------------comment-----------------------------------------------*/

.comment-title-image {
    position: absolute;
    top: 10px;
    right: -30rpx;
    height: 50rpx;
    width: 50rpx;
}

.comment-item {
    padding: 10px 15px;
    background-color: white;
    display: flex;
    flex-direction: column;
    border-top: 1rpx solid #d9d9d9;
}

.comment-head {
    display: flex;
    align-items: center;
}

.comment-userName {
    font-size: 14px;
}

.comment-avatar {
    height: 50rpx;
    width: 50rpx;
    border-radius: 50%;
    margin-right: 10px;
}

.comment-body {
    margin-top: 20rpx;
}

/*----------------------------------marker-----------------------------------------------*/

.markers-wrap {
    margin: 10px 0;
}

.marker {
    margin: 2rpx;
    background-color: white;
    display: flex;
    align-items: center;
}

.marker-tip {
    padding: 8px 0 10px 15px;
    font-size: 14px;
    color: #888;
}

.marker-item {
    border-top: 1rpx solid #d9d9d9;
}

/*----------------------------------menu-----------------------------------------------*/

.menu-wrap {
    position: fixed;
    bottom: 40rpx;
    right: 60rpx;
}

.menu-items {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.menu-item {
    white-space: nowrap;
    position: absolute;
    transition: all 0.4s;
    display: flex;
    background-color: #eb6159;
    border-radius: 10px;
    padding: 8rpx 20rpx;
    box-shadow: 2px 2px 2px #888;
}

.menu-item-icon {
    height: 50rpx;
    width: 50rpx;
}

.menu-item-text {
    color: #fff;
    margin-left:5px;
}

.menu-btn-box {
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
    box-shadow: 2px 2px 2px #888;
    background: #eb6159;
    display: flex;
    justify-content: center;
    align-items: center;
}

.menu-btn {
    height: 100rpx;
    width: 100rpx;
}

/*-----------------------------------lost-------------------------------------*/

.lost-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.lost-image {
    width: 500rpx;
    height: 500rpx;
}

.lost-text {
    font-size: 14px;
    color: #888;
    padding: 8px 0 20px;
    margin-top: 100rpx;
}

.lost-btn {
    margin-top: 100rpx;
    background-color: #eb6159;
    color: #fff;
    border-radius: 4px;
    font-size: 18px;
    line-height: 47px;
    padding: 0 30px;
}

/*---------------------------------- modal--------------------------------------- */

.modal-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 5px;
    width: 400rpx;
    box-sizing: border-box;
    position: relative;
}

.inner-close {
    position: absolute;
    right: 3px;
    top: 3px;
}

.inner-image {
    width: 350rpx;
    height: 350rpx;
}

.icon {
    width: 33%;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon::before {
    content: " ";
    position: absolute;
    height: 80%;
    left: 0;
    top: 10%;
    border-left: 1rpx solid #d9d9d9;
}

.icon:first-child::before {
    display: none;
}

.inner-button {
    width: 90%;
    box-sizing: border-box;
    font-size: 18px;
    background-color: #eb6159;
    margin: 0;
    color: #fff;
}

.inner-text {
    text-align: center;
    font-size: 14px;
    color: #888;
    padding: 8px 0 15px 0;
}
